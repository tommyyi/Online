<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light">
    </style>
	
    <style name="tianyi_dialogbackup">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>
    
    <style name="tianyi_dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:padding">30.0dip</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>
    
    <style name="tianyi_layout_firstlevel_margin">
        <item name="android:layout_marginTop">0dip</item>
        <item name="android:layout_marginBottom">15dip</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">10dip</item>
    </style>

    <style name="tianyi_item_margin">
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:layout_marginBottom">10dip</item>
        <item name="android:layout_marginLeft">20dip</item>
        <item name="android:layout_marginRight">20dip</item>
    </style>

    <style name="tianyi_text_module_item_name">
        <item name="android:textSize">@dimen/tianyi_text_module_item_name</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/tianyi_text_module_item_name</item>
    </style>
    
    <style name="tianyi_text_module_item_value">
        <item name="android:textSize">@dimen/tianyi_text_module_item_value</item>
        <item name="android:textColor">@color/tianyi_text_module_item_value</item>
    </style>
    
    <style name="tianyi_text_tips_value">
        <item name="android:textSize">@dimen/tianyi_text_tips</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/tianyi_text_tips</item>
    </style>
    
    <style name="tianyi_text_cardpay_tips_value">
        <item name="android:textSize">@dimen/tianyi_text_tips</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/tianyi_text_tips</item>
    </style>
    
    <style name="tianyi_text_tips_title">
        <item name="android:textSize">@dimen/tianyi_text_tips_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/tianyi_text_tips</item>
    </style>

    <style name="tianyi_edittext_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="tianyi_toast_text_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/tianyi_white</item>
    </style>
	
    <style name="tianyi_loading_dialog_text_style">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/tianyi_white</item>
    </style>
    
    <style name="tianyi_margin_padding_style">
        <item name="android:layout_marginTop">0dip</item>
        <item name="android:layout_marginBottom">15dip</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
    </style>

    <style name="tianyi_loading_dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item> 
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>    
</resources>