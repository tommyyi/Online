<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android1="http://schemas.android.com/apk/res/android"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal|center_vertical"
    android:layout_marginLeft="50.0dip"
    android:layout_marginRight="50.0dip"
    android:background="@drawable/tianyi_background_for_process_dialog"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical" >

        <com.tianyi.ui.LoadingImageView
            android:id="@+id/loadingmotion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/tianyi_loadingcircle_light" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/common_ll_middle"
        android:layout_width="0.0dip"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/loginning_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxEms="10"
            android:singleLine="false"
            android:text="帐号%s登录中"
            style="@style/tianyi_loading_dialog_text_style"
            android:textSize="12sp"/>
    </LinearLayout>
	
    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical" >
		
        <Button
            android:id="@+id/tianyi_change_account_btn"
            style="@style/tianyi_text_module_item_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0.0dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/tianyi_btn_getcode"
            android:text="切换帐号"
            android:textSize="12sp"
            android:textColor="@color/tianyi_font_color_cancelbuttontext" >
        </Button>

    </LinearLayout>
</LinearLayout>