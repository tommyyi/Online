<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android1="http://schemas.android.com/apk/res/android"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal|center_vertical"
    android:layout_marginLeft="50.0dip"
    android:layout_marginRight="50.0dip"
    android:background="@drawable/tianyi_background_for_process_dialog"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/common_ll_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical" >

        <com.tianyi.ui.LoadingImageView
            android:id="@+id/loadingmotion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/tianyi_loadingcircle_light" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/common_ll_middle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/loading_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxEms="10"
            android:singleLine="true"
            android:text="@null"
            style="@style/tianyi_loading_dialog_text_style"/>
    </LinearLayout>

</LinearLayout>