<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_horizontal|center_vertical"
    android:background="@color/tianyi_background_activity"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/tianyi_titlebar_height_50dp"
        android:background="@color/tianyi_background_activity_title" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/goback"
                android:layout_width="@dimen/tianyi_titlebar_height_50dp"
                android:layout_height="@dimen/tianyi_titlebar_height_50dp"
                android:background="@null"
                android:src="@drawable/tianyi_title_bar_back"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxEms="10"
                android:singleLine="true"
                android:text="@string/tianyi_payment_center"
                android:textColor="@color/tianyi_text_activity_title"
                android:textSize="@dimen/tianyi_text_activity_title" />
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="0dp"
                android:background="@color/tianyi_background_module_title"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:background="@null"
                        android:src="@drawable/tianyi_product_icon" />
                </LinearLayout>

                <LinearLayout
                    style="@style/tianyi_item_margin"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/tianyi_text_tips_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tianyi_payment_product" >
                    </TextView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/tianyi_item_margin"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/tianyi_text_module_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tianyi_account_name_null" >
                </TextView>

                <TextView
                    android:id="@+id/payment_center_username"
                    style="@style/tianyi_text_module_item_value"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:singleLine="true" >
                </TextView>
            </LinearLayout>

            <include layout="@layout/tianyi_row_divider"/>

            <LinearLayout
                style="@style/tianyi_item_margin"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/tianyi_text_module_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tianyi_product_name" >
                </TextView>

                <TextView
                    android:id="@+id/payment_center_productname"
                    style="@style/tianyi_text_module_item_value"
                    android:layout_width="0.0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:singleLine="true" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                style="@style/tianyi_item_margin"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/tianyi_text_module_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tianyi_product_price" >
                </TextView>

                <TextView
                    android:id="@+id/payment_center_price"
                    style="@style/tianyi_text_module_item_value"
                    android:layout_width="0.0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:singleLine="true" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="0dp"
                android:background="@color/tianyi_background_module_title"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:background="@null"
                        android:src="@drawable/tianyi_payicon" />
                </LinearLayout>

                <LinearLayout
                    style="@style/tianyi_item_margin"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/tianyi_text_tips_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tianyi_payment_tips" >
                    </TextView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dip"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="visible" >

                <Button
                    android:id="@+id/tianyi_payment_center_weixin"
                    style="@style/tianyi_text_module_item_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/tianyi_btn_weixin"
                    android:textColor="@color/tianyi_white"
                    >
                </Button>

                <Button
                    android:id="@+id/tianyi_payment_center_alipay"
                    style="@style/tianyi_text_module_item_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/tianyi_btn_alipay"
                    android:layout_marginLeft="5dp">
                </Button>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dip"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="visible" >

                <Button
                    android:id="@+id/tianyi_payment_center_yl"
                    style="@style/tianyi_text_module_item_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/tianyi_btn_yinlian"
                    android:textColor="@color/tianyi_white"
                    >
                </Button>

                <Button
                    android:id="@+id/tianyi_payment_center_yd"
                    style="@style/tianyi_text_module_item_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/tianyi_btn_yidong"
                    android:textColor="@color/tianyi_font_color_cancelbuttontext"
                    android:layout_marginLeft="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="visible" >

                <Button
                    android:id="@+id/tianyi_payment_center_liantong"
                    style="@style/tianyi_text_module_item_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/tianyi_btn_liantong"
                    android:textColor="@color/tianyi_white"
                    />

                <Button
                    android:id="@+id/tianyi_payment_center_shengfutong"
                    style="@style/tianyi_text_module_item_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/tianyi_btn_shengfutong"
                    android:textColor="@color/tianyi_font_color_cancelbuttontext" />

                <Button
                    android:id="@+id/tianyi_payment_center_shengdaka"
                    style="@style/tianyi_text_module_item_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/tianyi_btn_shengdaka"
                    android:textColor="@color/tianyi_white"
                    android:visibility="gone"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dip"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="visible" >

                <Button
                    android:id="@+id/tianyi_payment_center_dianxin"
                    style="@style/tianyi_text_module_item_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/tianyi_btn_dianxin"
                    android:textColor="@color/tianyi_font_color_cancelbuttontext" >
                </Button>

                <Button
                    android:id="@+id/tianyi_payment_center_zhengtuyikatong"
                    style="@style/tianyi_text_module_item_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/tianyi_btn_zhengtuyikatong"
                    android:textColor="@color/tianyi_font_color_cancelbuttontext" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0.0dip"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="visible" >

                <Button
                    android:id="@+id/tianyi_payment_center_junwang"
                    style="@style/tianyi_text_module_item_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/tianyi_btn_junwang"
                    android:textColor="@color/tianyi_white" />

                <Button
                    android:id="@+id/tianyi_payment_center_wanmeiyikatong"
                    style="@style/tianyi_text_module_item_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/tianyi_btn_wanmeiyikatong"
                    android:textColor="@color/tianyi_white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dip"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="visible" >

                <Button
                    android:id="@+id/tianyi_payment_center_wangyiyikatong"
                    style="@style/tianyi_text_module_item_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/tianyi_btn_wangyiyikatong"
                    android:textColor="@color/tianyi_font_color_cancelbuttontext" />

                <Button
                    android:id="@+id/tianyi_payment_center_souhuyikatong"
                    style="@style/tianyi_text_module_item_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/tianyi_btn_souhuyikatong"
                    android:textColor="@color/tianyi_font_color_cancelbuttontext" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dip"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="visible" >

                <Button
                    android:id="@+id/tianyi_payment_center_zongyouyikatong"
                    style="@style/tianyi_text_module_item_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/tianyi_btn_zongyouyikatong"
                    android:textColor="@color/tianyi_white" />

                <Button
                    android:id="@+id/tianyi_payment_center_tecent"
                    style="@style/tianyi_text_module_item_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/tianyi_btn_tecent"
                    android:textColor="@color/tianyi_font_color_cancelbuttontext" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dip"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="visible" >

                <Button
                    android:id="@+id/tianyi_payment_center_tianhongyikatong"
                    style="@style/tianyi_text_module_item_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/tianyi_btn_tianhongyikatong"
                    android:textColor="@color/tianyi_font_color_cancelbuttontext" />

                <Button
                    android:id="@+id/tianyi_payment_center_jiuyouyikatong"
                    style="@style/tianyi_text_module_item_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/tianyi_btn_jiuyouyikatong"
                    android:textColor="@color/tianyi_font_color_cancelbuttontext" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="visible" >

                <Button
                    android:id="@+id/tianyi_payment_center_tianxiayikatong"
                    style="@style/tianyi_text_module_item_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/tianyi_btn_tianxiayikatong"
                    android:textColor="@color/tianyi_white" />

                <Button
                    android:id="@+id/tianyi_payment_center_lianhuaokka"
                    style="@style/tianyi_text_module_item_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/tianyi_btn_lianhuaokka"
                    android:textColor="@color/tianyi_white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dip"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone" >

                <Button
                    android:id="@+id/tianyi_payment_center_shengfutongyuleyikatong"
                    style="@style/tianyi_text_module_item_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/tianyi_btn_shengfutongyuleyikatong"
                    android:textColor="@color/tianyi_white" />

                <Button
                    android:id="@+id/tianyi_payment_center_guangyuyikatong"
                    style="@style/tianyi_text_module_item_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/tianyi_btn_guangyuyikatong"
                    android:textColor="@color/tianyi_white" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>