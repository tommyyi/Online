<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/customer_row_email"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:background="@drawable/tianyi_ccslist_row_bg"
    android:baselineAligned="false"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    android:paddingLeft="16.0dip"
    android:paddingRight="16.0dip" 
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <LinearLayout
        android:layout_marginBottom="18.0sp"
        android:layout_marginTop="18.0sp"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/emailaddress"
            android:text="@string/tianyi_email_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff41434a"
            android:textSize="18.0sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="18.0sp"
        android:layout_marginTop="18.0sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/customer_contactrow3"
            android:hint="@string/tianyi_clicktocontact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxEms="10"
            android:singleLine="true"
            android:textColor="#ffa1a9ae"
            android:textSize="14.0sp"
            android:visibility="visible" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12.0dip"
            android:src="@drawable/tianyi_arrow_right" />
    </LinearLayout>

</LinearLayout>